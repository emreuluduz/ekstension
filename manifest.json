{
    "manifest_version": 3,
    "name": "__MSG_extension_name__",
    "description": "__MSG_extension_description__",
    "version": "1.0.0",
    "default_locale": "tr",
    "permissions": [
        "contextMenus",
        "scripting",
        "storage",
        "notifications",
        "alarms",
        "offscreen"
    ],
    "host_permissions": [
        "https://eksisozluk.com/*"
    ],
    "action": {
        "default_popup": "src/actions/index.html",
        "default_icon": {
            "16": "icons/icon_16.png",
            "48": "icons/icon_48.png",
            "128": "icons/icon_128.png"
        }
    },
    "background": {
        "service_worker": "src/background/background.js",
        "type": "module"
    },
    "icons": {
        "16": "icons/icon_16.png",
        "48": "icons/icon_48.png",
        "128": "icons/icon_128.png"
    },
    "web_accessible_resources": [{
        "resources": [
            "src/utils/*.js",
            "src/actions/js/*.js",
            "src/background/*.js",
            "src/content/*.js"
        ],
        "matches": ["<all_urls>"]
    }],
    "content_scripts": [{
        "matches": ["*://*.eksisozluk.com/*"],
        "js": [
            "src/content/content-constants.js",
            "src/content/content-storage.js",
            "src/content/filter.js"
        ],
        "run_at": "document_end"
    }]
}